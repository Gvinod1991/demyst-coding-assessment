{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src", "src/__tests__"],
  "exclude": ["node_modules"]
}